<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/business_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="2dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:id="@+id/resto_photo"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resto_name"
                android:layout_toRightOf="@+id/resto_photo"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/drop_down"
                android:src="@drawable/arrow_down"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resto_star"
                android:visibility="gone"
                android:layout_toRightOf="@+id/resto_photo"
                android:layout_below="@+id/resto_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resto_address"
                android:visibility="gone"
                android:layout_toRightOf="@+id/resto_photo"
                android:layout_below="@+id/resto_star"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>